***TASK01**********
#include <iostream>
using namespace std;
int main() {
 int size = 8;
 int arr[size] = {1, 2, 3, 4, 5, 6, 7, 8};
 
 cout << "Original Array: ";
 for (int i = 0; i < size; i++) { 
 cout << arr[i] << endl;
 }
 
 
 for (int i = 0; i < size - 1; i++) { 
 arr[i] = arr[i + 1];
 }
 
 cout << "Array after deleting first and last element: ";
 for (int i = 0; i < size - 2; i++) { 
 cout << arr[i] << endl;
 }
 cout << endl;
 return 0;
}
###########################################################
***********TASK02***************
#include <iostream>
using namespace std;
int main() {
 int arr[] = {1, 2, 3, 4, 5, 6,7,8}; 
 int size = 8; 
 
 cout << "Original Array: ";
 for (int i = 0; i < size; i++) {
 cout << arr[i] << " ";
 }
 cout << endl;
 
 cout << "Reversed Array: ";
 for (int i = size - 1; i >= 0; i--) {
 cout << arr[i] << endl;
 }
 cout << endl;
 return 0;
}
