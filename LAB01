*******TASK03*********************
#include <iostream>
using namespace std;
int main() {
 int arr[8] = {1, 2, 3, 4, 5, 6, 7, 8}; 
 int index, newValue;
 cout << "Enter index to update: ";
 cin >> index;
 if (index >= 0 && index < 8) {
 cout << "Enter new value: ";
 cin >> newValue;
 arr[index] = newValue;
 } else {
 cout << "Invalid index!" << endl;
 return 0;
 }
 cout << "Updated Array: ";
 for (int i = 0; i < 8; i++) 
 cout << arr[i] << " ";
 return 0;
} 
